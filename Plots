#OVERALL DATA
ggplot(data=MC_GiveN) + geom_point(mapping=aes(x=Age, y=GiveN_ALL_ceiling_conservative)) 


#MODALITY
    #ENGLISH ONLY
    Modality_EE <- EE$Language_Modality
    GiveN_conserv_EE <- as.factor(EE$GiveN_ALL_ceiling_conservative)
    ggplot(EE, aes(x=EE$Age, y=GiveN_conserv_EE)) + geom_point(aes(shape=Modality_EE, color=Modality_EE)) #set up prior to writing as an object
    EnglishEarly <- ggplot(EE, aes(x=EE$Age, y=GiveN_conserv_EE)) + geom_point(aes(shape=Modality_EE, color=Modality_EE))
    EnglishEarly + labs(x = "Age (years)", y = "Give-N Highest Quantity Correct") #add x and y labels 
    
    #ASL ONLY
    Modality_AE <- AE$Language_Modality
    GiveN_conserv_AE <- as.factor(AE$GiveN_ALL_ceiling_conservative)
    ggplot(AE, aes(x=AE$Age, y=GiveN_conserv_AE)) + geom_point(aes(shape=Modality_AE, color=Modality_AE))
    ASLEarly <-ggplot(AE, aes(x=AE$Age, y=GiveN_conserv_AE)) + geom_point(aes(shape=Modality_AE, color=Modality_AE))
    #ALTERNATIVE CODE FORMAT FOR GGPLOT: ggplot(data=AE) + geom_point(mapping=aes(x=AE$Age, y=GiveN_conserv_AE, shape=Modality_AE, color=Modality_AE))
    ASLEarly +labs(x = "Age (years)", y = "Give-N Highest Quantity Correct")

    #ENGLISH & ASL
    GiveN_EarlyExposed <- subset(MC_GiveN, MC_GiveN$Group_4cat == "English Early" | MC_GiveN$Group_4cat == "ASL Early")
    LanguageGroup <- as.factor(factor(as.character(GiveN_EarlyExposed$Group_4cat), levels = c("English Early", "ASL Early"), labels = c("English", "ASL"), exclude=NA)) 
    GiveN_conserv_EarlyExposed <- as.factor(GiveN_EarlyExposed$GiveN_ALL_ceiling_conservative)
    GiveN_EarlyExposed <- cbind(GiveN_EarlyExposed, LanguageGroup, GiveN_conserv_EarlyExposed)
    View(GiveN_EarlyExposed)
    LangGrp_EarlyExposed <- GiveN_EarlyExposed$LanguageGroup
    ggplot(GiveN_EarlyExposed, aes(x=GiveN_EarlyExposed$Age, y=GiveN_conserv_EarlyExposed)) + geom_point(aes(shape=LangGrp_EarlyExposed , color=LangGrp_EarlyExposed))
    Early_Exposed <- ggplot(GiveN_EarlyExposed, aes(x=GiveN_EarlyExposed$Age, y=GiveN_conserv_EarlyExposed)) + geom_point(aes(shape=LangGrp_EarlyExposed , color=LangGrp_EarlyExposed))
    Early_Exposed + labs(x = "Age (years)", y = "Give-N Highest Quantity Correct")
    
 
#TIMING
    #EARLY ONLY
    GiveN_EarlyExposed <- subset(MC_GiveN, MC_GiveN$Group_4cat == "English Early" | MC_GiveN$Group_4cat == "ASL Early")
    Timing_Early <- GiveN_EarlyExposed$Language_Timing
    GiveN_EarlyExposed <- cbind(GiveN_EarlyExposed, Timing_Early) 
    GiveN_conserv_EarlyExposed <- as.factor(GiveN_EarlyExposed$GiveN_ALL_ceiling_conservative)
    ggplot(GiveN_EarlyExposed, aes(x=GiveN_EarlyExposed$Age, y=GiveN_conserv_EarlyExposed)) + geom_point(aes(shape=Timing_Early , color=Timing_Early))
    EarlyTiming <- ggplot(GiveN_EarlyExposed, aes(x=GiveN_EarlyExposed$Age, y=GiveN_conserv_EarlyExposed)) + geom_point(aes(shape=Timing_Early , color=Timing_Early))
    EarlyTiming + labs(x = "Age (years)", y = "Give-N Highest Quantity Correct")

    #EARLY AND LATER
    GiveN_conserv <- as.factor(MC_GiveN$GiveN_ALL_ceiling_conservative) #factorize
    TimingGroup <- subset(MC_GiveN, MC_GiveN$Group_2cat == "Early" | MC_GiveN$Group_2cat == "Later") #create new subset
    TimingGroup <- cbind(TimingGroup, GiveN_conserv) #add variables to dataframe
    TimeGrp <- TimingGroup$Language_Timing 
    ggplot(TimingGroup, aes(x=TimingGroup$Age, y=TimingGroup$GiveN_conserv)) + geom_point(aes(shape=TimeGrp, color=TimeGrp))
    BothTiming <- ggplot(TimingGroup, aes(x=TimingGroup$Age, y=TimingGroup$GiveN_conserv)) + geom_point(aes(shape=TimeGrp, color=TimeGrp))
    BothTiming + labs(x = "Age (years)", y = "Give-N Highest Quantity Correct")
    
